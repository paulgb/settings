
startup_message off         # don't show startup message

vbell off                   # don't flash the screen as a warning bell

hardstatus alwayslastline   # show the status line always
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

altscreen on                # create a new buffer for ncurses apps like vim and less

